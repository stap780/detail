
<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :sku %>
    <%= f.input :title %>
    <%= f.input :desc %>
    <%= f.input :cat %>
    <%= f.input :charact %>
    <%= f.input :charact_gab %>
    <%= f.input :oldprice %>
    <%= f.input :price %>
    <%= f.input :quantity %>
    <%= f.input :image %>
    <%= f.input :url %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
